@{
    ViewData["Title"] = "Nuevo Chef";
}
@model Chef
<div class="formulario">
    <h1 class="titulo">Agregar un Chef</h1>
    <form asp-controller="Chef" asp-action="AgregarChef">
        <div class="item">
            <label asp-for="Nombre">Nombre: </label>
            <input type="text" asp-for="Nombre">
            <span asp-validation-for="Nombre"></span>
        </div>
        <div class="item">
            <label asp-for="Apellido">Apellido: </label>
            <input type="text" asp-for="Apellido">
            <span asp-validation-for="Apellido"></span>
        </div>
        <div class="item">
            <label asp-for="FechaNacimiento">Fecha de Nacimiento:</label>
            <input type="date" asp-for="FechaNacimiento">
            <span asp-validation-for="FechaNacimiento"></span>
        </div>
        <div class="boton">
            <button class="btn btn-primary">Agregar Chef</button>
        </div>
    </form>
</div>